{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "declarations.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "files": [
    "src/index.tsx"
  ],
}