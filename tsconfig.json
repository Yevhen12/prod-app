{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "config",
    "declarations.d.ts",
    "src/**/*",
    ".eslintrc.js",
    "webpack.config.ts",
    "jest.config.ts",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "files": [
    "src/index.tsx"
  ],
}